BootStrap: docker
From: nvidia/cuda:10.1-cudnn7-runtime-ubuntu16.04

%help
    base recipe: https://github.com/NIH-HPC/singularity-examples

#---------------------------------------------------------------------
%labels
#---------------------------------------------------------------------
MAINTAINER Jongsu Kim

#---------------------------------------------------------------------
%environment
#---------------------------------------------------------------------
export PATH=/bin:/usr/bin:/usr/local/bin:/usr/local/cuda/bin:
export LC_ALL=C

#---------------------------------------------------------------------
%post
#---------------------------------------------------------------------

apt-get update
apt-get install -y libhdf5-dev locales python3-dev python3-pip
apt-get clean

pip3 install --upgrade pip3
pip3 install tensorflow-gpu
pip3 install keras
pip3 install Pillow scikit-learn pandas numpy scipy h5py matplotlib notebook ipython
pip3 install geopy pytz chardet networkx folium geopandas
pip3 install openpyxl selenium requests

# create some generic mount points
mkdir /mnt/data /mnt/input /mnt/output /mnt/ref /mnt/code /mnt/work
